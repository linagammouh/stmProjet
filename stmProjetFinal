                                    System.out.println("TPS                : " + TpsprixEnfant + "$");
                                    System.out.println("TVQ                : " + TvqprixEnfant + "$");
                                    System.out.println("----------------------------------------");
                                    System.out.println("Prix avec taxes    : " + prixEnfantTaxe + "$");
